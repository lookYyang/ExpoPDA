<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.orangehi.expo.Utils.TopBar
        android:id="@+id/operation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="@string/app_name"
        app:right_button_text=""
        app:right_button_image="@mipmap/user64"
        app:show_left_button="false"
        app:title_background="@color/colorPrimary"
        app:title_textColor="#fff">
    </com.orangehi.expo.Utils.TopBar>
    <include layout="@layout/content_main" />

</LinearLayout>
